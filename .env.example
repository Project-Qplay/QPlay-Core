# Environment Variables for Netlify Deployment
# Copy this file to .env and fill in your values

# Supabase Configuration (Backend)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Google OAuth Configuration (Backend)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# CORS Configuration (Backend - Optional)
# Comma-separated list of allowed origins for CORS
# If not set, defaults to localhost ports and qplay.netlify.app
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://qplay.netlify.app

# Frontend Environment Variables (Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Development URLs (optional - automatically handled)
VITE_BACKEND_URL=http://localhost:8888/.netlify/functions

# Build Configuration
NODE_VERSION=18
